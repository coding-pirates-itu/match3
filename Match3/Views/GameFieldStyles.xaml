<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:m="clr-namespace:Match3.Models"
                    xmlns:v="clr-namespace:Match3.Views">

    <ItemsPanelTemplate x:Key="CanvasPanel">
        <Canvas/>
    </ItemsPanelTemplate>


    <Style x:Key="ContainerStyle" TargetType="ContentPresenter">
        <Setter Property="Control.Width" Value="{Binding CellWidth, RelativeSource={RelativeSource AncestorType=v:GameFieldView}}"/>
        <Setter Property="Control.Height" Value="{Binding CellHeight, RelativeSource={RelativeSource AncestorType=v:GameFieldView}}"/>
    </Style>


    <Style x:Key="GameFieldStyle" TargetType="v:GameFieldView">
        <Setter Property="ItemsPanel" Value="{StaticResource CanvasPanel}"/>
        <Setter Property="ItemContainerStyle" Value="{StaticResource ContainerStyle}"/>
        <Setter Property="ItemTemplate" Value="{StaticResource BallTemplate}"/>
    </Style>
</ResourceDictionary>
